{% extends 'back/base.html.twig' %}

{% block title %}
    Gestion catégories
{% endblock %}


{% block body %}

<div class="container-fluid">

    <div class="row justify-content-end me-5">
        <div class="pdfButton mt-3 mb-3">
            <a class="d-flex text-center" href="index.html.twig">
                <i class="col-md-2 fas fa-file-pdf"></i>
                <p class="col-md-10 mt-2">Telecharger le PDF</p>
            </a>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-md-6 text-center">
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>

    <table class="table table-hover">
        <thead class="table-primary">
            <tr>
                <th>Libelle</th>
                <th>Description</th>
                <th>DateEntree</th>
                <th>PrixHt</th>
                <th>EstActif</th>
                <th>Tva</th>
                <th>
                    <div>
                        <button type="submit" class="filter-action">
                            <i class="fas fa-search"></i>
                        </button>
                        <a class="filter-action" href="{{ path('app_produit_index') }}">
                            <i class="fas fa-refresh"></i></a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.description |slice(0, 100) }}...</td>
                <td>{{ produit.dateEntree ? produit.dateEntree|date('d-m-Y') : '' }}</td>
                <td>{{ produit.prixHt }}€</td>
                <td>{{ produit.estActif ? 'Oui' : 'Non' }}</td>
                <td>{{ produit.tva }}</td>
                <td>
                    <a class="pe-1" href="{{ path('app_produit_show', {'id': produit.id}) }}"><i class="formFa fa-solid fa-eye ms-1"></i></a>
                    <a class="pe-1" href="{{ path('app_produit_edit', {'id': produit.id}) }}"><i class="formFa fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
