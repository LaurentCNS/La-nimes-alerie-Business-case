{% extends 'back/base.html.twig' %}

{% block title %}
    Gestion catégories
{% endblock %}


{% block body %}

<div class="container-fluid">


    <div class="d-flex justify-content-center mt-3">
        <div class="col-md-6 text-center">
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        </div>
    </div>
    {{ form_start(filters) }}
    <table class="table table-hover">
        <thead class="table-primary">
            <tr>
                <th>{{
                    knp_pagination_sortable(
                        categories,
                        'Noms',
                        'categorie.nom'
                    )|raw
                    }}
                    {{ form_widget(filters.nom) }}</th>
                <th>{{
                    knp_pagination_sortable(
                        categories,
                        'Animaux',
                        'animal.libelle'
                    )|raw
                    }}
                    {{ form_widget(filters.animal) }}</th>
                <th>Associations</th>
                <th>
                    <div>
                        <button type="submit" class="filter-action">
                            <i class="fas fa-search"></i>
                        </button>
                        <a class="filter-action" href="{{ path('app_admin_categorie_index') }}">
                            <i class="fas fa-refresh"></i></a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.animal.libelle }}</td>
                <td>{% if categorie.parent is not null %}
                        <u>(Sous-cat)</u> {{ categorie.parent.nom }}
                    {% else %}
                        <u>Catégorie parent</u>
                    {% endif %}</td>
                <td>
                    <a class="pe-1" href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}"><i class="formFa fa-solid fa-eye ms-1"></i></a>
                    <a class="pe-1" href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}"><i class="formFa fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Désolé je n'ai rien trouvé :(</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ form_end(filters) }}

    <div class="navigation d-flex justify-content-center mt-2">
         {{ knp_pagination_render(categories) }}
    </div>
</div>
{% endblock %}
