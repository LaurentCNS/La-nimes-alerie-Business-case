{#Faire la gestion des notes avant l'include#}
<p class="mx-3">
    {% if star == 5 and star >= 4.5 %}
        {% for i in 1..5 %}
            <i class="yellowstar fas fa-star"></i>
        {% endfor %}
    {% elseif star < 4.5 and star >= 3.5 %}
        {% for i in 1..4 %}
            <i class="yellowstar fas fa-star"></i>
        {% endfor %}
        <i class="fas fa-star"></i>
    {% elseif star < 3.5 and star >= 2.5 %}
        {% for i in 1..3 %}
            <i class="yellowstar fas fa-star"></i>
        {% endfor %}
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
    {% elseif star < 2.5 and star >= 1.5 %}
        <i class="yellowstar fas fa-star"></i>
        <i class="yellowstar fas fa-star"></i>
        {% for i in 1..3 %}
            <i class="fas fa-star"></i>
        {% endfor %}
    {% elseif star < 1.5 and star >=0.5 %}
        <i class="yellowstar fas fa-star"></i>
        {% for i in 1..4 %}
            <i class="fas fa-star"></i>
        {% endfor %}
    {% elseif star < 0.5 and star >= 0 %}
        {% for i in 1..5 %}
            <i class="fas fa-star"></i>
        {% endfor %}
    {% elseif star == 'empty' %}
        {% for i in 1..5 %}
            <i class="emptystar fas fa-star"></i>
        {% endfor %}
    {% endif %}
</p>