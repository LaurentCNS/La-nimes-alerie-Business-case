{% for produit in promoProduit|slice(0, 6) %}
    <div class="col-6 col-sm-4 col-md-4 col-xl-2 mt-4 mb-5">
        <div class="cardPromo">
            <a href="{{ path('app_produit', {'slug': produit[0].slug}) }}">
                <div class="picture">
                    {% for photo in produit[0].photo %}
                        <img class="mt-3" src="{{ asset('build/img/uploads/items/' ~ photo.url) }}"
                             alt="{{ produit[0].libelle }}">
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-6">
                        <p class="mb-0 mx-3 mt-3 fw-bolder"><s>{{ produit[0].prixHt | prixTtc(produit[0].tva,0) }}€</s></p>
                        <p class="price mx-3 pb-2 fw-bolder">
                            {# filtre du prix #}
                            {{ produit[0].prixHt | prixTtc(produit[0].tva,produit[0].promotion.pourcentage) }}€
                    </div>
                    <div class="col-6">
                        <div class="container-promo">
                            -{{ produit[0].promotion.pourcentage }}%
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
{% endfor %}