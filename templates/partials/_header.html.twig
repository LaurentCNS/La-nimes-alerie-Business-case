<header>
	<!--LOGO/RECHERCHE/PANIER-->
	<div class="headeranduser">
		<div class="box">

			<a href="{{ path('app_home') }}"><img class="logo" src="{{ asset('build/img/logos/logo.png') }}" alt="logo lanimesalerie"></a>
			<h1>LA NIMES ALERIE</h1>
			<div class="absolute">
				<div class="search-container">
					<form action="envoi.php" method="post">
						<label for="search">recherche</label>
						<div class="search">
							<input type="text" name="search" id="search" placeholder="RECHERCHER" class="round">
							<input type="submit" value="" class="glass">
						</div>
					</form>
				</div>
				<div class="user-space">
					<a href="" class="wishlist"></a>
					<a href="" class="order"></a>
					<a href="" class="user"></a>
					<a href="" class="basketround"></a>
				</div>
				<div class="basket">
					<a href="" class="picture"></a>
					<p class="value">00</p>
				</div>
				<div class="menuburger">
					<a href="" class="burger"></a>
				</div>
			</div>
		</div>
	</header>
	<!--NAVBAR-->
	<div class="navtop">
		<ul>
			{% for animal in animals %}
				<li data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop{{ animal.id }}" aria-controls="offcanvasTop">
					<p>{{ animal.libelle }}<span class="arrow"></span>
					</p>
				</li>
				<!--OFFCANVAS-->
				<div class="offcanvas offcanvas-top" tabindex="-1" id="offcanvasTop{{ animal.id }}" aria-labelledby="offcanvasTopLabel">
					<div class="offcanvas-header">
						<h5 id="offcanvasTopLabel">Menu</h5>
						<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
					</div>
					<div class="offcanvas-body">

						{% for categorie in categories %}
							{% if categorie.animal.id == animal.id and categorie.parent == null %}
								{{ categorie.nom }}
								<ul>
									{% for sousCategorie in sousCategories %}
										{% if sousCategorie.animal.id == animal.id and sousCategorie.parent.id == categorie.id %}
											<li>{{ sousCategorie.nom }}</li>
										{% endif %}
									{% endfor %}
								</ul></br>
							{% endif %}
						{% endfor %}

					</div>
				</div>
			{% endfor %}
		</ul>
	</div>
</header>
